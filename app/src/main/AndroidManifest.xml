<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.galaxycoffie3">

    <uses-permission-sdk-23 android:name="android.permission.CAMERA" />
    <uses-permission-sdk-23 android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/cat_button_removebg_preview"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".ChooseCoffeeWindow"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.transparentTheme" />
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".Payment"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ChooseMilkWindow"
            android:theme="@style/AppTheme.CustomTheme2" />
        <activity
            android:name=".ShoppingCart"
            android:configChanges="orientation"
            android:label="Cart"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.testTheme" />
        <activity android:name=".ShareOrder" />
        <activity android:name=".TransitionScreen" />
    </application>

</manifest>